<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#3A5A67"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="5dp"
                android:top="2dp"/>

        </shape>
